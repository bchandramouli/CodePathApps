<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_coments"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:minHeight="20dp"
        android:minWidth="20dp"
        android:layout_margin="5dp"
        android:id="@+id/ivFromProfile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_text"
        android:id="@+id/tvFrom"
        android:textColor="@color/blue"
        android:layout_toEndOf="@+id/ivFromProfile"
        android:layout_toRightOf="@+id/ivFromProfile"
        android:layout_alignTop="@+id/ivFromProfile"
        android:layout_alignBottom="@+id/ivFromProfile"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_text"
        android:id="@+id/tvCreateTime"
        android:textColor="@color/blue"
        android:layout_alignBaseline="@+id/tvFrom"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ivFromProfile"
        android:layout_alignBottom="@+id/ivFromProfile"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_text"
        android:id="@+id/tvComment"
        android:layout_margin="3dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_below="@+id/ivFromProfile"/>

</RelativeLayout>